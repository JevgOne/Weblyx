{
  "regions": ["fra1"],
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/google-ads/analyze/route.ts": {
      "maxDuration": 300
    },
    "app/api/google-marketing/cron/route.ts": {
      "maxDuration": 300
    },
    "app/api/meta-ads/analyze/route.ts": {
      "maxDuration": 120
    }
  },
  "redirects": [
    {
      "source": "/:path(.*)",
      "destination": "https://www.weblyx.cz/:path",
      "has": [
        {
          "type": "host",
          "value": "weblyx.cz"
        }
      ],
      "permanent": true
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/publish-scheduled-posts",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/google-marketing/cron",
      "schedule": "0 6 * * *"
    }
  ]
}
